{
    "name": "drupal-env",
    "chef_type": "role",
    "json_class": "Chef::Role",
    "description": "Drupal environment configuration.",
    "run_list": [
        "recipe[drupal-env]",
        "recipe[lamp::nfs]",
        "recipe[lamp::xdebug]"
    ],
    "default_attributes": {
        "apache": {
            "mpm": "worker"
        },
        "mysql": {
            "server_root_password": "",
            "server_repl_password": "",
            "server_debian_password": ""
        },
        "lamp": {
            "xdebug": {
                "directives": {
                    "remote_host": "10.0.2.2",
                    "remote_enable": 0,
                    "remote_autostart": 1
                }
            }
        }
    }
}